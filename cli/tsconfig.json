{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2019",
    "lib": [
      "es2019"
    ],
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
